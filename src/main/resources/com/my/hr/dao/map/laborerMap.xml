<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.or/DTD mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='com.my.hr.dao.map.laborerMap'>
	<select id='selectLaborers' resultType='laborerMap'>
		select laborer_id,laborer_name,hire_Date
		from laobrers
		order by laobrer_id
	</select>
	
	<insert id='insertLaborer'>
		insert into laborers
		values(#{laborerId},#{laborername},#{hireDate})
	</insert>
	
	<update id='updateLaborer'>
		update laborers
		set laborer_name = #{laborername}, hire_Date = ${hire_Date}
		where laborer_id = ${laborerId}
	</update>
	
	<delete id='deleteLaborer'>
		delete laborers
		where laborer_id = ${laborerId}
	</delete>
</mapper>